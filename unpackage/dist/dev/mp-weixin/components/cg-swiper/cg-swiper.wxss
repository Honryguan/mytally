
.swiper {
	width: 100%;
	height: 370rpx;
	padding-top: 20rpx;
}
.swiper-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.swiper-item-view {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: 20%;
	height: 170rpx;
}
.swiper-img {
	width: 100rpx;
	height: 100rpx;
}
/* 轮播圆点样式修改 */
.dots {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.dots .dot {
	margin: 0 5rpx;
	width: 40rpx;
	height: 6rpx;
	border-radius: 20%;
	-webkit-transition: all 0.6s;
	transition: all 0.6s;
}
.dots .dot.active {
	width: 40rpx;
}

